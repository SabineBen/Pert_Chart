<body class="bg-gray-200">

  <nav class="flex py-5 bg-green-500 text-white px-24">
    <div class="w-1/2 px-12 mr-auto">
      <p class="text-2xl font-bold">My Application</p>
    </div>

    <ul class="w-1/2 px-16 ml-auto flex justify-end pt-1">
      <li class="nav-item px-4">
        <a href="/tasks" class="nav-link font-semibold hover:bg-green-700 py-3 px-4 rounded-md">My tasks</a>
      </li>

      <li class="nav-item px-4">
        <a href="/create" class="nav-link font-semibold border-2 border-white hover:text-green-700 
            hover:bg-white py-3 px-4 rounded-md">Add task</a>
      </li>
    </ul>
  </nav>
  <!-- Document body -->

  {{{body}}}

  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">
      <!DOCTYPE html>
      <html lang="en">

      <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>CRUD Node.js</title>

        <!-- Tailwind CSS Link -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.1/tailwind.min.css">

        <!-- Fontawesome Link -->
        <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">

      </head>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.1/tailwind.min.css">

      <!-- Fontawesome Link -->
      <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">

      <table class="table-fixed w-full">
        <thead>
          <tr class="bg-green-500 text-white">
            <th class="w-20 py-4 ...">ID</th>
            <th class="w-1/4 py-4 ...">Title</th>
            <th class="w-1/2 py-4 ...">Description</th>
            <th class="w-28 py-4 ...">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each tasks}}
          <tr>
            <td class="py-3 px-6">{{id}}</td>
            <td class="p-3">
              <a href="tasks/crud">
                <i class="">{{title}}</i></a>
            </td>
            <td class="p-3 text-center">{{description}}</td>
            <td class="p-3 flex">
              <form action="/tasks/delete" method="POST" class="mx-2">
                <input type="hidden" value="{{id}}" name="id">
                <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                  <i class="fas fa-trash"></i></button>
              </form>
              <a href="/tasks/edit/{{id}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
                <i class="fas fa-pen"></i></a>
            </td>
          </tr>

          {{/each}}
        </tbody>

      </table>
    </div>
  </div>